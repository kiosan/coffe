<% @body_id = 'cart' %>


<div id="matter" class="matter">



  <div class="block">
    <h1><%= t(:shopping_cart) %></h1>

  </div>

  <div class="grid">
    <div class="grid_9">
      <% if @order.line_items.empty? %>

        <div class="cart-no-items">
          <h2><%= t(:your_cart_is_empty) %></h2>
          <p><%= link_to t(:continue_shopping), products_path, :class => 'button continue' %></p>
        </div>
     
      <% else %>
        <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
          <%= render :partial => 'form', :locals => {:order_form => order_form} %>
        <% end %>
      <%end%>
      <div id="empty-cart" data-hook>
    <%= form_tag empty_cart_path, :method => :put do %>
      <p id="clear_cart_link" data-hook>

        <%= link_to t(:continue_shopping), products_path, :class => 'continue' %>
      </p>
    <% end %>
  </div>
    </div>

    <div class="grid_3 callout">

      <h2>Order Total</h2>

      <table id="shopping-cart-totals-table" cellspacing="0">
        <tfoot>
        </tfoot>
        <tbody>
        </tbody>
      </table>

      <div id="cart-checkout-methods">
        
        
       
				
	<button class="btn-large" onclick="window.location='<%=checkout_url%>';">Checkout Now</button>
		
          
      </div>
    </div>
  </div>

</div>